<Page
    x:Class="CafeOZ.Beverage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafeOZ"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local1="using:CafeOZ.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/MainPage.jpg" Opacity="0.8"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <!--Page name-->
        <Grid
            Grid.ColumnSpan="8"
            Grid.Column="2"
            Grid.Row="2"
            Background="SaddleBrown"
            Opacity="0.7"
            CornerRadius="10"
            Margin="5">

            <TextBlock 
                FontSize="30" 
                FontFamily="Quicksand"
                HorizontalAlignment="Center" 
                Text="Drink Menu"
                TextWrapping="Wrap" 
                FontWeight="SemiBold"
                Foreground="Black"/>
        </Grid>
        
        <!--Drink menu-->
        <ListView Grid.Column="2" 
                  Grid.ColumnSpan="8" Grid.Row="3" 
                  Grid.RowSpan="10"
                  Background="Beige"
                  CornerRadius="10"
                  Margin="10,10,10,10"
                  ItemsSource="{x:Bind DMenu}">
               
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local1:DrinkMenu">
                    <Grid
                        BorderBrush="SaddleBrown"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="2"
                              CornerRadius="10">
                            <Image Source="{x:Bind Image}"
                                   Height="45"
                                   Width="45"
                                   Stretch="Fill"/>
                        </Grid>

                        <Grid Grid.Column="1"
                              Margin="5">
                            <StackPanel
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Left">

                                <TextBlock Text="{x:Bind MenuList}"
                                           Foreground="Black"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           FontFamily="Quicksand"
                                           VerticalAlignment="Top"/>

                                <TextBlock Text="{x:Bind Cost}"
                                           Foreground="Black"
                                           FontSize="12"
                                           FontWeight="SemiLight"
                                           FontFamily="Quicksand"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Column="2"
                              Margin="3"
                              Background="CadetBlue"
                              CornerRadius="5"
                              BorderBrush="Beige"
                              BorderThickness="2">

                            <Button x:Name="Orderbtn"
                                    Content="Order"
                                    Click="Orderbtn_Click" 
                                    FontFamily="Quicksand"
                                    Foreground="Black"
                                    FontWeight="SemiBold"
                                    FontSize="9" 
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"/>

                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
       
    </Grid>
</Page>
