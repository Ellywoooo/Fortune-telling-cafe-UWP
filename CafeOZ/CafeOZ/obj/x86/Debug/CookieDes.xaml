<Page
    x:Class="CafeOZ.CookieDes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafeOZ"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local1="using:CafeOZ.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/MainPage.jpg" Opacity="0.8"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--Page name-->
        <Grid
            Grid.ColumnSpan="8"
            Grid.Column="2"
            Grid.Row="2"
            Background="RosyBrown"
            Opacity="0.7"
            CornerRadius="10"
            Margin="5">

            <TextBlock 
                FontSize="30" 
                FontFamily="Quicksand"
                HorizontalAlignment="Center" 
                Text="Fortune Cookie"
                TextWrapping="Wrap" 
                FontWeight="SemiBold"
                Foreground="Black"/>
        </Grid>
        <!--Cookie image-->
        <Grid
            Grid.Column="3" 
            Grid.ColumnSpan="6"
            Grid.RowSpan="3"
            Grid.Row="3"
            Margin="10,20,10,20"
            HorizontalAlignment="Center">
            <Image   
                Source="/Assets/CrackedCookie.png" 
                Stretch="Fill" 
                />
        </Grid> 
        <!--Cookie random saying-->
        <Grid
            Grid.Column="2" 
            Grid.ColumnSpan="8"
            Grid.Row="6" 
            Grid.RowSpan="4"
            Background="White"
            Margin="10"
            CornerRadius="10"
            Opacity="0.5">
            
            <TextBlock x:ConnectionId='2' 
                x:Name="CookieRandomText"
                TextWrapping="Wrap"
                FontFamily="Quicksand"
                FontSize="20"
                Foreground="Black"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                />
        </Grid>
        
    </Grid>
</Page>

