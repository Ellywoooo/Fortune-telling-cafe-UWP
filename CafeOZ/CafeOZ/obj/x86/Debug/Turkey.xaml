<Page x:ConnectionId='1'
    x:Class="CafeOZ.Turkey"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafeOZ"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local1="using:CafeOZ.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/MainPage.jpg" Opacity="0.8"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <!--Page name-->
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="8" 
            Grid.Column="2" 
            Background="SaddleBrown"
            Opacity="0.7"
            CornerRadius="10"
            Margin="3">
            
            <TextBlock 
                FontSize="30" 
                FontFamily="Quicksand"
                Text="Coffee reading" 
                TextWrapping="Wrap"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                FontWeight="SemiBold"
                />
        </Grid>

        <!--Reading Listview-->
        <ListView x:ConnectionId='2'
                Grid.Column="2" 
                Grid.ColumnSpan="8" 
                Grid.Row="3" 
                Grid.RowSpan="9"
                CornerRadius="10"
                Margin="10,10,10,10"
                x:Name="TurkeyReading"
                Background="Beige"
                                              
                >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate                         >
                    <StackPanel x:ConnectionId='4'
                            BorderBrush="SaddleBrown"
                            BorderThickness="2"
                            Margin="10,10,10,10"
                            CornerRadius="10">

                        <TextBlock x:ConnectionId='5' FontFamily="Quicksand"
                                       FontSize="18"
                                                           
                                       TextWrapping="Wrap"
                                       FontWeight="SemiBold"
                                       Foreground="Black"
                                       HorizontalTextAlignment="Center"
                                       Margin="10"/>
                        <Grid
                                Height="200"
                                Width="200"
                                CornerRadius="10"
                                BorderBrush="Black"
                                BorderThickness="1.3"
                                Opacity="0.8">
                            <Image x:ConnectionId='7' 
                                                          
                                   Stretch="Fill"/>
                        </Grid>

                        <TextBlock x:ConnectionId='6' FontFamily="Quicksand"
                                       FontSize="12"
                                                              
                                       TextWrapping="Wrap"
                                       Foreground="Black"
                                       HorizontalTextAlignment="Center"
                                       Margin="10"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--Url button-->
        <Grid
            Grid.ColumnSpan="4" 
            Grid.Column="4" 
            Grid.Row="12" 
            Background="SaddleBrown" 
            Opacity="0.7"
            CornerRadius="10"
            Margin="5,5,5,5">

            <HyperlinkButton 
                Content="Check the symbols"             
                Height="40" 
                Width="140" 
                FontFamily="Quicksand" 
                FontSize="15" 
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Foreground="Black"
                NavigateUri= "https://www.instructables.com/Turkish-Coffee-Fortune-Telling/"/>
        </Grid>
    </Grid>
</Page>

