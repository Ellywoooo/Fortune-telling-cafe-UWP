<Page
    x:Class="CafeOZ.Lotto"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafeOZ"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/MainPage.jpg" Opacity="0.8"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--Page name-->
        <Grid
            Grid.ColumnSpan="8"
            Grid.Column="2"
            Grid.Row="2"
            Background="RosyBrown"
            Opacity="0.7"
            CornerRadius="10"
            Margin="5">

            <TextBlock 
                FontSize="30" 
                FontFamily="Quicksand"
                HorizontalAlignment="Center" 
                Text="Secret Lotto"
                TextWrapping="Wrap" 
                FontWeight="SemiBold"
                Foreground="Black"/>
        </Grid>
        
        <!--Number board-->

            <Grid
                Grid.ColumnSpan="10"
                Grid.Column="1"
                Grid.Row="3"
                Grid.RowSpan="7"
                Margin="10,30,10,10"
                CornerRadius="5"
                BorderBrush="Black"
                BorderThickness="2"
                >
                <Grid.Background>
                    <ImageBrush ImageSource="Assets/Lotto.png" 
                                Stretch="UniformToFill"
                                Opacity="0.4"/>
                </Grid.Background>
                <ScrollViewer>
                    <TextBlock x:ConnectionId='4' 
                        x:Name="TextBlockTicket"
                        FontFamily="Quicksand"
                        FontSize="16"
                        FontWeight="Bold"
                        TextWrapping="Wrap"
                        Foreground="Black"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        />
                </ScrollViewer>
        </Grid>

        <!--Textbox for lines and ticket print button-->
        <Grid
            Grid.ColumnSpan="8"
            Grid.Column="2"
            Grid.Row="10"
            Grid.RowSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel>
                
                <TextBlock
                Foreground="Black"
                FontWeight="Bold"
                FontFamily="Quicksand"
                FontSize="17"
                TextWrapping="Wrap">
                Enter the number of rows(1 to 20)
                </TextBlock>

                <Grid>
                    <TextBox x:ConnectionId='3'
                    x:Name="TextBoxTicket"        
                    Width="80"
                    Margin="5"
                    CornerRadius="10"
                    BorderThickness="0"
                    HorizontalTextAlignment="Center"
                    />
                </Grid>
       
                <Button x:ConnectionId='2'
                    Foreground="Black"
                    HorizontalAlignment="Center"
                    CornerRadius="5"
                    Margin="5"
                    Background="#FFD3A145"
                    FontFamily="Quicksand"
                    FontWeight="SemiBold"
                    Padding="8"
                                          >
                    Press the Ticket
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

