<Page
    x:Class="CafeOZ.Tarot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafeOZ"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/TarotBack.jpg" Opacity="0.8"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!--Page text-->
        <Grid
            Grid.Column="2"
            Grid.ColumnSpan="9"
            Grid.Row="1"
            Margin="10"
            >
            <TextBlock 
                FontSize="18" 
                FontFamily="Quicksand"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Text="Let's predict your future"
                TextWrapping="Wrap" 
                FontWeight="SemiLight"
                Foreground="White"/>
        </Grid>
        <!--Pick three cards-->
        <Grid
            Grid.ColumnSpan="9"
            Grid.Column="2"
            Grid.Row="2"
            Background="Black"
            Opacity="0.7"
            CornerRadius="10"
            Margin="5">

            <TextBlock 
                FontSize="20" 
                FontFamily="Quicksand"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Text="Click the screen three times"
                TextWrapping="Wrap" 
                FontWeight="Normal"
                Foreground="Gold"/>
        </Grid>
        
        <!--Tarot card select button-->
          <Button x:ConnectionId='2' x:Name="Spreadbtn" 
                  HorizontalAlignment="Stretch" 
                  Grid.Column="1" 
                  Grid.ColumnSpan="11"  
                  Grid.Row="3" 
                  Grid.RowSpan="7" 
                  VerticalAlignment="Stretch"
                  CornerRadius="10"
                  Margin="10"
                                           
                  Opacity="0.6"
                  >
            <Button.Background>
                <ImageBrush ImageSource= "/Assets/TarotCard.gif"/>
            </Button.Background>
        </Button>

        <!--Card 1-->
        <Image x:ConnectionId='3' x:Name="Img1"
               Grid.Column="2"
               Grid.ColumnSpan="3" 
               Grid.RowSpan="3" 
               Grid.Row="10" 
               Source="/Assets/Card.png"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Margin="5"
               />
        <!--Card 2-->
        <Image x:ConnectionId='4' 
               x:Name="Img2"
               Grid.Column="5"
               Grid.ColumnSpan="3" 
               Grid.RowSpan="3" 
               Grid.Row="10"
               Source="/Assets/Card.png"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Margin="5"
               />
        <!--Card 3-->
        <Image x:ConnectionId='5' 
               x:Name="Img3"
               Grid.Column="8" 
               Grid.ColumnSpan="3"
               Grid.RowSpan="3" 
               Grid.Row="10"
               Source="/Assets/Card.png"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Margin="5"
            />

    </Grid>
</Page>

